{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "EDF Models",
    "oneOf": [
        {
            "$ref": "#/$defs/ModelBase"
        },
        {
            "$ref": "#/$defs/Component"
        },
        {
            "$ref": "#/$defs/Region"
        },
        {
            "$ref": "#/$defs/Composition"
        }
    ],
    "$defs": {
        "ModelBase": {
            "type": "object",
            "required": [
                "id",
                "guid"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "A persistent unique id"
                },
                "guid": {
                    "type": "string",
                    "format": "uuid",
                    "description": "A globally unique identifier"
                },
                "name": {
                    "type": "string",
                    "description": "A friendly name (typically from an external system)"
                },
                "contentType": {
                    "type": "string",
                    "description": "Describes the structure of the content object"
                },
                "content": {
                    "type": "object",
                    "description": "This typically contains presentation data"
                },
                "parameters": {
                    "type": "object",
                    "description": "This typically contains instructional metadata"
                }
            }
        },
        "Component": {
            "allOf": [
                {
                    "$ref": "#/$defs/ModelBase"
                }
            ]
        },
        "Region": {
            "allOf": [
                {
                    "$ref": "#/$defs/ModelBase"
                }
            ],
            "properties": {
                "regions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Region"
                    }
                },
                "components": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Component"
                    }
                }
            }
        },
        "Composition": {
            "allOf": [
                {
                    "$ref": "#/$defs/ModelBase"
                }
            ],
            "properties": {
                "regions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Region"
                    }
                }
            }
        }
    }
}